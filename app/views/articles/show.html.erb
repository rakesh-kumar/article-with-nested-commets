<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @article.body %>
</p>

<p>
  <strong>Author:</strong>
  <%= @article.author %>
</p>


<% @all_comments.each do |comment|%>
	<p>
	  <strong>Title:</strong>
	  <%= comment.body %>
	  <%= comment.id %>
	</p>

	<p>
	  <strong>Description:</strong>
	  <%= comment.name %>
	</p>
	<%= link_to 'Edit Comment', edit_article_comment_path(@article, comment) %>
<% end %>
<div id="articleCommets"></div>



<%=render 'comments/form', :locals => @article%>
